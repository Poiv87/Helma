                <tr>
                    <td class="font"><%= reserv[`reser${i}`].date %></td>
                    <td class="font"><%= reserv[`reser${i}`].time %></td>
                    <td class="font"><%= reserv[`reser${i}`].code %></td>
                    <td class="font"><%= reserv[`reser${i}`].services %></td>
                    <td class="font"><a id="<%= i %>"
                            data-doc="<%= reserv[`reser${i}`]._id %>">حذف</a></td>
                </tr>
                <% } %>

            </table>
            <% } %>
        </main>
        <%- include('./partials/footer.ejs') %>
        <% if (c === 1) { %>
        <script>
            window.aValue = 1;
        </script>
        <% } %>
    </body>
</html>
